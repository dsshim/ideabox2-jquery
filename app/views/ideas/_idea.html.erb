 <li class="idea" id="<%= idea.id %>">
    <h1 class="title"><%= idea.title %></h1>
    <h3 class="body"><%= format_body(idea) %></h3>
    <%= link_to "Edit", edit_idea_path(idea), class: "btn btn-md btn-primary" %>
    <button class="delete btn btn-md btn-primary">Delete</button>
    <br>
    <br>
    <h4 class="quality"><%= idea.quality.capitalize %></h4>
    <button class="thumbsup btn btn-sm btn-success">Thumbs Up</button> <button class="thumbsdown btn btn-sm btn-danger">Thumbs Down</button>
    <hr>
  </li>
