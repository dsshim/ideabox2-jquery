<%= form_for @idea, html: {id: "edit-idea-form" } do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, value: @idea.title, id: "title-field" %>

  <%= f.label :body %>
  <%= f.text_field :body, value: @idea.body, id: "body-field" %>

  <%= f.submit class: "btn btn-md btn-primary"%>
<% end %>
